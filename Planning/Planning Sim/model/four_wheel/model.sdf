<?xml version="1.0"?>
<sdf version="1.7">
  <model name="four_wheel_robot">

    <!-- CHASSIS -->
    <link name="chassis">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.03</izz>
        </inertia>
      </inertial>

      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.25 0.35 0.10</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.3 0.7 1</ambient>
          <diffuse>0.2 0.5 0.9 1</diffuse>   <!-- Blue body -->
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>

      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.25 0.35 0.10</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Wheel size -->
    <!-- radius = 0.07 m, width = 0.04 m -->

    <!-- FRONT LEFT WHEEL -->
    <link name="wheel_fl">
      <pose>0.12 0.20 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.0015</izz>
        </inertia>
      </inertial>

      <visual name="wheel_fl_visual">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>   <!-- Black wheels -->
        </material>
      </visual>

      <collision name="wheel_fl_collision">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- FRONT RIGHT WHEEL -->
    <link name="wheel_fr">
      <pose>0.12 -0.20 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.0015</izz>
        </inertia>
      </inertial>

      <visual name="wheel_fr_visual">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>

      <collision name="wheel_fr_collision">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- REAR LEFT WHEEL -->
    <link name="wheel_rl">
      <pose>-0.12 0.20 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.0015</izz>
        </inertia>
      </inertial>

      <visual name="wheel_rl_visual">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>

      <collision name="wheel_rl_collision">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- REAR RIGHT WHEEL -->
    <link name="wheel_rr">
      <pose>-0.12 -0.20 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.0015</izz>
        </inertia>
      </inertial>

      <visual name="wheel_rr_visual">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>

      <collision name="wheel_rr_collision">
        <geometry>
          <cylinder>
            <radius>0.07</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- REVOLUTE JOINTS -->
    <joint name="joint_wheel_fl" type="revolute">
      <parent>chassis</parent>
      <child>wheel_fl</child>
      <axis><xyz>1 0 0</xyz></axis>
    </joint>

    <joint name="joint_wheel_fr" type="revolute">
      <parent>chassis</parent>
      <child>wheel_fr</child>
      <axis><xyz>1 0 0</xyz></axis>
    </joint>

    <joint name="joint_wheel_rl" type="revolute">
      <parent>chassis</parent>
      <child>wheel_rl</child>
      <axis><xyz>1 0 0</xyz></axis>
    </joint>

    <joint name="joint_wheel_rr" type="revolute">
      <parent>chassis</parent>
      <child>wheel_rr</child>
      <axis><xyz>1 0 0</xyz></axis>
    </joint>

    <static>false</static>

  </model>
</sdf>
